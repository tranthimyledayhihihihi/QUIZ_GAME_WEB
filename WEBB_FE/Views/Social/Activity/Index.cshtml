@{
    ViewBag.Title = "Quà Tặng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="gift-container">
    <h2 class="page-title">
        <i class="fa-solid fa-gift me-2"></i> Quà Tặng Hằng Ngày
    </h2>

    <div class="gift-grid">

        <!-- Hộp Quà 1 -->
        <div class="gift-box">
            <img src="https://cdn-icons-png.flaticon.com/512/534/534432.png"
                 class="gift-icon" />
            <h4>Điểm thưởng</h4>
            <p class="desc">Nhận 50 điểm miễn phí</p>
            <button class="btn-claim">Nhận ngay</button>
        </div>

        <!-- Hộp Quà 2 -->
        <div class="gift-box">
            <img src="https://cdn-icons-png.flaticon.com/512/4202/4202835.png"
                 class="gift-icon" />
            <h4>Vật phẩm</h4>
            <p class="desc">1 Vé chơi miễn phí</p>
            <button class="btn-claim">Nhận ngay</button>
        </div>

        <!-- Hộp Quà 3 -->
        <div class="gift-box">
            <img src="https://cdn-icons-png.flaticon.com/512/992/992651.png"
                 class="gift-icon" />
            <h4>Combo</h4>
            <p class="desc">XP + Điểm thưởng</p>
            <button class="btn-claim">Nhận ngay</button>
        </div>

    </div>
</div>

@section Styles {
    <style>
        .gift-container {
            padding: 40px;
            color: #fff;
        }

        .page-title {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 25px;
        }

        .gift-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
        }

        .gift-box {
            background: #ffffff22;
            padding: 25px;
            border-radius: 20px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 2px solid #ffffff33;
            transition: 0.25s;
        }

            .gift-box:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 25px #00000033;
            }

        .gift-icon {
            width: 95px;
            margin-bottom: 15px;
        }

